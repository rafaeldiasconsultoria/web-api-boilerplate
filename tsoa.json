{
	"swagger": {
		"outputDirectory": "./dist",
		"entryFile": "./src/app.ts",
		"securityDefinitions": {
			"api_key": {
				"type": "apiKey",
				"name": "access_token",
				"in": "header"
			},
			"tsoa_auth": {
				"type": "oauth2",
				"authorizationUrl": "https://swagger.io/api/oauth/dialog",
				"flow": "implicit",
				"scopes": {
					"write:pets": "modify things",
					"read:pets": "read things"
				}
			}
		},
		"host": "localhost:8080",
        "yaml": false,
        "specVersion": 2
	},
	"routes": {
		"basePath": "/",
		"entryFile": "./src/app.ts",
		"routesDir": "./src/",
		"authenticationModule": "./src/authentication/authentication.ts",
		"middleware": "express"
	}
}